---
import { Image } from "astro:assets";

import { COMPLETE_SOCIALS } from "@/lib/constants";
import SectionContainer from "../SectionContainer.astro";

const FOOTER_NAV = [
  {
    name: "Inicio",
    href: "/",
  },
  {
    name: "Sobre nosotros",
    href: "#",
  },
  {
    name: "Suplementos",
    href: "#",
  },
  {
    name: "Implementos",
    href: "#",
  },
  {
    name: "Política de Privacidad",
    href: "#",
  },
  {
    name: "Blog",
    href: "#",
  },
] as const;

const pathName = Astro.url.pathname;
---

<SectionContainer id="footer" class="bg-secondary py-10">
  <footer class="flex justify-between items-center">
    <div>
      <p class="text-white text-xl md:text-2xl text-center">
        Copyright © 2024 <span class="block"> Castillo Sport </span>
      </p>
    </div>
    <ul class="grid grid-cols-2 gap-y-5">
      {
        FOOTER_NAV.map((fn) => (
          <li class="text-center">
            <a
              href={fn.href}
              class:list={[
                "hover:text-white transition-colors",
                pathName === fn.href ? "text-white" : "text-primary",
              ]}
            >
              {fn.name}
            </a>
          </li>
        ))
      }
    </ul>
    <div class="gap-5 items-center hidden md:flex">
      {
        COMPLETE_SOCIALS.map((social) => (
          <a href={social.link} target="_blank" rel="noreferrer">
            <Image src={social.icon} alt={social.name} width={35} height={35} />
          </a>
        ))
      }
    </div>
    <div
      class="flex gap-5 items-center md:hidden flex-wrap-reverse max-w-16 justify-center"
    >
      {
        COMPLETE_SOCIALS.map((social) => (
          <a href={social.link} target="_blank" rel="noreferrer">
            <Image src={social.icon} alt={social.name} width={25} height={25} />
          </a>
        ))
      }
    </div>
  </footer>
</SectionContainer>
