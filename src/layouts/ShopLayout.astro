---
import CategoryLink from "@/components/CategoryLink.astro";
import Divider from "@/components/Divider.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import MainLayout from "@/layouts/MainLayout.astro";

const categories = [
  "electronics",
  "jewelery",
  "men's clothing",
  "women's clothing",
];
---

<MainLayout title="Tienda" currentPath="Tienda">
  <SectionContainer id="tienda-section" class="min-h-screen py-20 flex">
    <div class="flex gap-y-10 w-full gap-x-5">
      <section class="w-1/4 sticky top-0 space-y-5">
        <header class="space-y-5">
          <h3 class="text-primary text-3xl font-bold">Tienda</h3>
          <div class="bg-shop-image h-96 w-full rounded-xl p-2">
            <h4 class="text-white text-center text-2xl font-bold mt-5">
              Tu Envío es Nuestro Regalo
            </h4>
            <p class="text-white text-center text-sm mt-10">
              Realiza una compra mayor a $200.000 y recibe tu pedido sin costo
              de envío.
            </p>
          </div>
        </header>
        <div>
          <h3 class="text-primary text-3xl font-bold">Categorias</h3>
          <ul class="mt-10 flex gap-5 flex-wrap">
            {
              categories.map((category) => (
                <li>
                  <CategoryLink category={category} />
                </li>
              ))
            }
          </ul>
        </div>
      </section>
      <Divider orientation="vertical" />
      <slot />
    </div>
  </SectionContainer>
</MainLayout>
