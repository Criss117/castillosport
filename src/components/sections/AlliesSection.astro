---
import { Image } from "astro:assets";
import SectionContainer from "../SectionContainer.astro";
import { ALLIES } from "@/lib/constants";
---

<SectionContainer id="allies" class="bg-secondary pt-10 pb-20">
  <h2 class="text-white text-center text-3xl font-semibold">
    Nuestros aliados
  </h2>
  <ul class="grid grid-cols-4 gap-2 mt-10">
    {
      ALLIES.map((allie) => (
        <li>
          <a href={allie.slug} target="_blank" rel="noopener noreferrer">
            <Image
              src={allie.logo}
              alt={allie.name}
              width={300}
              height={200}
              class="aspect-video"
            />
          </a>
        </li>
      ))
    }
  </ul>
</SectionContainer>
