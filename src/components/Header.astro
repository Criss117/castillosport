---
import { Image } from "astro:assets";
import { IMAGES, SOCIALS } from "@/lib/constants";
import SearchInput from "./SearchInput.astro";
import ShopingCart from "./ShopingCart.svelte";
---

<header
  class="bg-secondary md:px-10 xl:px-60 flex justify-between items-center h-24"
>
  <div class="flex gap-x-5 md:w-1/3">
    <a href="/">
      <Image
        src={IMAGES.logo}
        alt="castillo sport logo"
        class="w-full h-16 object-contain object-center"
        width={64}
        height={64}
      />
    </a>

    <div
      class="flex gap-5 items-center flex-wrap-reverse md:hidden max-w-16 justify-center"
    >
      {
        SOCIALS.map((social) => (
          <a href={social.link} target="_blank" rel="noreferrer">
            <Image src={social.icon} alt={social.name} width={18} height={18} />
          </a>
        ))
      }
    </div>
    <div class="gap-5 items-center hidden md:flex">
      {
        SOCIALS.map((social) => (
          <a href={social.link} target="_blank" rel="noreferrer">
            <Image src={social.icon} alt={social.name} width={25} height={25} />
          </a>
        ))
      }
    </div>
  </div>
  <div class="w-1/3 items-center hidden md:flex">
    <SearchInput />
  </div>

  <!-- <Image
      src={IMAGES.svg.shopingCart}
      alt="shopping cart"
      width={25}
      height={25}
    /> -->
  <div class="flex gap-x-5 items-center justify-end md:w-1/3">
    <ShopingCart client:load />
    <Image src={IMAGES.svg.user} alt="user" width={40} height={40} />
  </div>
</header>
