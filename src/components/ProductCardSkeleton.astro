---
import Divider from "./Divider.astro";
---

<div class="bg-white rounded-lg shadow-md w-full flex flex-col group">
  <div
    class="flex items-center justify-between p-5 w-full"
    id="image-container"
  >
    <div class="h-56 aspect-video animate-pulse bg-gray-400 w-full"></div>
  </div>

  <Divider />

  <div class="p-5 space-y-2">
    <h3
      class="text-xl font-bold product-title w-full h-10 animate-pulse bg-gray-400"
    >
    </h3>

    <div class="h-10 animate-pulse bg-gray-400"></div>

    <p
      class="text-slate-500 flex-1 product-description h-32 animate-pulse bg-gray-400"
    >
    </p>
  </div>
</div>

<style>
  .product-title {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .product-description {
    display: -webkit-box;
    -webkit-line-clamp: 5;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }
</style>
